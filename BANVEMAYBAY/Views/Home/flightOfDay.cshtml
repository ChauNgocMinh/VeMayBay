
@model IEnumerable<BanVeMayBay.Models.ticket>
@{
    ViewBag.Title = "flightSearch";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<section class="flight-destinations">
    <div class="container-fluid bg-white">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="flight-head">
                    <div class="">
                        <nav aria-label="breadcrumb">
                            @{var Date = ViewBag.dateNow; }
                            <span style="font-weight:bold; font-size:22px;"> Vé Bay: @Date.ToString("dd/MM/yyyy") </span>

                        </nav>
                    </div>
                </div>
               
                <div class="flight-table">
                    <table>
                        <thead>
                            <tr>
                                <th>From</th>
                                <th>To</th>
                                <th>Detail</th>
                          
                                <th>Price</th>
                    
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <h6>@item.airport.airportName</h6>
                                        <p>Airport (@item.airport.airportName)</p>
                                    </td>
                                    <td>
                                        <h6>@item.airport1.airportName</h6>
                                        <P>Airport (@item.airport1.airportName)</P>
                                    </td>
                                    <td>
                                        <a href="~/chuyen-bay/@item.id">Detail</a>
                                    </td>
                                   
                                    <td>
                                        <h6><strong class="color-red-3">@item.price.Value.ToString("N0") $</strong></h6>
                                        <p class="emi">(Currency - $)</p>
                                    </td>
                                  
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>


            </div>


        </div>
    </div>
</section>
<!-- Destination Ends -->