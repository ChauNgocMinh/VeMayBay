@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản Lý Lịch Trình </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang Chủ</a></li>

            </ol>
        </div>
    </div>
</div>
<section class="">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-9">
                    <a class="text-white btn btn-green" href="~/admin/Airport/Create">Thêm quốc gia</a>
                    <a class="text-white btn btn-green" href="~/admin/Airport/CreateAirports">Thêm sân bay</a>
                    @*<a class="text-white btn btn-danger" href="~/admin/Airport/trash">Lịch sử xóa</a>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Quốc gia</th>
                            <th>Sân bay</th>
                            <th>Chức năng</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.airports)
                        { 
                            <tr>
                                <td class="text-cam">@item.airportId</td>
                                <td style="font-size:14px;">@item.country.countryName</td>
                                <td style="font-size:14px;">@item.airportName</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Airport", new { id = item.airportId })"> <i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Airport", new { id = item.airportId})"> <i class="fas fa-toggle-off"></i> </a>
                                    }
                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Airport", new { id = item.airportId})"> <i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>