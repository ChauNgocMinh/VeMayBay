@model BanVeMayBay.Models.ticket
@{
    ViewBag.Title = "flightDetail";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<section class="booking">
    <div class="container bg-light p-4 rounded" style="margin-top:50px; margin-bottom:50px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div class="row">
            <div class="col-12 offset-md-2">
                <div class="booking-confirmed booking-outer">
                    <div class="confirmation-title text-center mb-4">
                        <h2 class="text-danger">Chi Tiết Vé: @Model.airport.airportName -> @Model.airport1.airportName</h2>
                    </div>
                    <div class="payment-info detail">
                        <div class="table-responsive">
                            <table class="table table-bordered mt-3">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col" class="title">Thông Tin</th>
                                        <th scope="col" class="title">Chi Tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="title">Giá</td>
                                        <td class="text-danger">@Model.price.Value.ToString("N0") $</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Ngày Bay</td>
                                        <td>@Model.departure_date.Value.ToString("dd-MM-yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Giờ Bay</td>
                                        <td>@Model.departure_time</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Giờ Đến (Dự Kiến)</td>
                                        <td>@Model.arrival_time</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Từ Ga</td>
                                        <td>@Model.airport.airportName</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Đến Ga</td>
                                        <td>@Model.airport1.airportName</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Mã Chuyến Bay</td>
                                        <td>@Model.flightCode</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Ghế Trống</td>
                                        <td>@Model.guestTotal Ghế</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("CreateOrder", "Site", new { ticketId = Model.id })'">Đặt Vé</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f2f5;
    }

    .title {
        font-size: 17px;
        font-weight: bold;
        color: #ff0000;
    }

    .booking-confirmed {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
    }

    .table tbody tr:hover {
        background-color: #e9ecef;
    }

    .table thead {
        background-color: #007bff;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
